<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <ImageView
        android:id="@+id/imageView_profile_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:contentDescription="@string/logo_content_descrition"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_account_circle_24" />

    <TextView
        android:id="@+id/profile_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/firstname"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/profile_button_edit"
        app:layout_constraintTop_toTopOf="@+id/imageView_profile_picture" />

    <Button
        android:id="@+id/profile_button_edit"
        style="@style/buttonPrimary"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/profile_edit"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_profile_picture"
        app:layout_constraintEnd_toStartOf="@+id/profile_button_logout"
        app:layout_constraintStart_toEndOf="@+id/imageView_profile_picture" />

    <Button
        android:id="@+id/profile_button_logout"
        style="@style/buttonSecondary"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="@string/profile_logout"
        app:layout_constraintBottom_toBottomOf="@+id/profile_button_edit"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/profile_number_attended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/profile_default_number"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_textview_attended"
        app:layout_constraintStart_toStartOf="@+id/profile_textview_attended"
        app:layout_constraintTop_toBottomOf="@+id/imageView_profile_picture" />

    <TextView
        android:id="@+id/profile_number_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_default_number"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_textview_friends"
        app:layout_constraintStart_toStartOf="@+id/profile_textview_friends"
        app:layout_constraintTop_toTopOf="@+id/profile_number_attended" />

    <TextView
        android:id="@+id/profile_number_invites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_default_number"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_textview_invites"
        app:layout_constraintStart_toStartOf="@+id/profile_textview_invites"
        app:layout_constraintTop_toTopOf="@+id/profile_number_friends" />

    <TextView
        android:id="@+id/profile_textview_attended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/profile_attended"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_number_attended" />

    <TextView
        android:id="@+id/profile_textview_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_friends"
        app:layout_constraintEnd_toStartOf="@+id/profile_textview_invites"
        app:layout_constraintStart_toEndOf="@+id/profile_textview_attended"
        app:layout_constraintTop_toTopOf="@+id/profile_textview_attended" />

    <TextView
        android:id="@+id/profile_textview_invites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="@string/profile_invites"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_textview_friends" />


</androidx.constraintlayout.widget.ConstraintLayout>